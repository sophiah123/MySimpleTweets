<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black"
        android:layout_below="@id/buttonRetweet"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/ivProfileImage"
        android:text="TextView"

        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="2dp"
        android:paddingRight="30dp"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/tvRelativeTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="#C0C0C0" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/tvUserName"
        android:text="TextView" />


    <!-- android:background="@android:color/transparent"
            android:drawable="@drawable/ic_vector_retweet_stroke"
for the bottom one-->

    <ImageButton
        android:id="@+id/buttonRetweet"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/tvBody"
        android:padding="0dp"
        android:layout_alignLeft="@id/tvBody"
        android:scaleType="fitCenter"
        android:tint="@color/medium_gray"

        android:background="@drawable/imageselector"
        />


    <ImageButton
        android:id="@+id/buttonFavorite"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/tvBody"
        android:layout_toEndOf="@+id/buttonRetweet"

        android:layout_toStartOf="@+id/buttonReply"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:tint="@color/medium_gray"
        app:srcCompat="@drawable/ic_vector_heart_stroke"

        />


    <ImageButton
        android:id="@+id/buttonReply"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/tvBody"
        android:layout_toStartOf="@+id/tvRelativeTimestamp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:tint="@color/medium_gray"
        app:srcCompat="@drawable/vector_compose_dm_fab" />



